<h1>Listing movies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Director</th>
      <th>Description</th>
      <th>Year</th>
      <th>Length</th>
      <th>Format</th>
      <th>Thumbnail</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.name, movie_path(movie.id) %></td>
        <td><%= movie.director %></td>
        <td><%= truncate(movie.description.html_safe, :length => 20) %></td>
        <td><%= movie.year %></td>
        <td><%= movie.length %></td>
        <td><%= movie.format %></td>
        <td><%= link_to image_tag(movie.thumbnail), movie_path(movie.id) %></td>
        <!-- <td><%= link_to 'Show', movie %></td> -->
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

